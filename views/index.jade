doctype html
html
    head
    title Marvel Tweet
    link(rel='stylesheet',href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet',href='/stylesheets/bootstrap-theme.min.css')
    link(rel='stylesheet',href='/stylesheets/style.css')
    body
        .container-fluid
            .row
                a(href='https://github.com/vish74/Tweet-Marvel' target='_blank')
                    img(style='position: absolute; top: 0; left: 0; border: 0;', src='https://camo.githubusercontent.com/567c3a48d796e2fc06ea80409cc9dd82bf714434/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f6c6566745f6461726b626c75655f3132313632312e706e67', alt='Fork me on GitHub', data-canonical-src='https://s3.amazonaws.com/github/ribbons/forkme_left_darkblue_121621.png')
                .col-md-10.col-md-offset-1
                    .col-md-4
                    .col-md-6
                .col-md-10.col-md-offset-1
                    h1=state
                    form.form-horizontal(method='POST', action='/tweet')
                        fieldset
                            // Form Name
                            legend
                            // Text input
                            .form-group
                                label.col-md-4.control-label(for='tweetinput') Marvel Character
                                .col-md-4
                                    input#textinput.form-control.input-md(name='tweetinput', type='text', placeholder='Your Tweet', maxlength='160', required='')
                            .form-group
                                label.col-md-4.control-label(for='statusinput') Status
                                .col-md-4
                                    input#textinput.form-control.input-md(name='statusinput', type='text', placeholder='Your Status', maxlength='160')
                            // Button
                            .form-group
                                label.col-md-4.control-label(for='button')
                                .col-md-4
                                    button#singlebutton.btn.btn-primary(name='button') Tweet This!
    script(src='/javascripts/jquery-1.11.3.min.js')
    script(src='/javascripts/bootstrap.min.js')